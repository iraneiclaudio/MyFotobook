<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="132dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shape_linear_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recycleView_image"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycleView_NomeFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:text="This is Text"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycleView_DescricaoFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:text="This is Text"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycleViewChave"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#00FFFFFF"
                android:textSize="1dp" />

            <TextView
                android:id="@+id/recycleView_DataFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>